<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_item_layout"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_cover_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="13dp"
        />

    <LinearLayout
        android:id="@+id/touchable_area"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_playlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorOnSecondary"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/track_name_size"

            tools:text="Название плейлиста" />
        <TextView
            android:id="@+id/tv_playlist_count_tracks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="11sp"
            android:fontFamily="@font/ys_display_regular"
            android:theme="@style/ThemeOfTrackDescription"
            tools:text="99 треков" />

    </LinearLayout>
</LinearLayout>