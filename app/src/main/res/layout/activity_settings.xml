<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?attr/colorSecondary"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="9dp"
            android:text="@string/settings"
            android:textColor="?attr/colorOnSecondary"
            android:background="?attr/colorSecondary"
            android:textSize="@dimen/titel_size"
            android:fontFamily="@font/ys_display_medium"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="4dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:background="?attr/colorSecondary"
            android:layout_height="60dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:background="?attr/colorSecondary"
                android:text="@string/dark_theme"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/second_screen_text_size" />

            <androidx.appcompat.widget.SwitchCompat
                android:theme="@style/switchStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:paddingStart="9dp"
                android:paddingEnd="16dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/share"
            style="@style/SettingsMenuStyle"
            android:text="@string/share"
            app:drawableEndCompat="@drawable/share" />


        <TextView
            android:id="@+id/support"
            style="@style/SettingsMenuStyle"
            android:text="@string/support"
            app:drawableEndCompat="@drawable/sup" />

        <TextView
            android:id="@+id/terms"
            style="@style/SettingsMenuStyle"
            android:text="@string/agreement"
            app:drawableEndCompat="@drawable/terms" />
    </LinearLayout>

</LinearLayout>

