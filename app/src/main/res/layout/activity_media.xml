<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical"
    tools:context=".ui.media.MediaActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">


    <ImageButton
        android:id="@+id/arrow2"
        style="@style/arrow_back"
        android:contentDescription="@string/content_description_arrow_back" />

    <TextView
        style="@style/header_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/media" />
</LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary"
        app:tabRippleColor="@color/YP_Light_Gray"
        app:tabTextColor="?attr/colorOnSecondary"
        app:tabIndicatorColor="?attr/colorOnSecondary"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>