<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:backgroundTint">@color/YP_Light_Gray</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/search_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/second_screen_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="inputSearchEditStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginHorizontal">14dp</item>
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/second_screen_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="trackTint">@color/just_gray</item>
        <item name="thumbTint">@color/YP_blue</item>
        <item name="colorSwitchThumbNormal">@color/YP_Light_Gray</item>
        <item name="android:colorForeground">@color/YP_blue</item>
    </style>
</resources>