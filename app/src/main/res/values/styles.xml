<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/search_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/second_screen_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">?attr/colorSecondary</item>
    </style>

    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/second_screen_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="colorControlActivated">@color/YP_blue</item>
        <item name="trackTint">@color/YP_Light_Gray</item>
        <item name="thumbTint">@color/just_gray</item>
        <item name="android:colorForeground">@color/YP_Light_Gray</item>
    </style>

    <style name="inputSearchEditStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginHorizontal">14dp</item>
        <item name="android:layout_marginVertical">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/just_gray</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="item_track_style">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">18dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="audio_player_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingHorizontal">2dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>